{
  "name": "namor",
  "version": "0.2.0",
  "description": "a url-friendly name generator",
  "author": "Jason Maurer <j@maur.co>",
  "license": "MIT",
  "keywords": [
    "name",
    "subdomain",
    "generator",
    "random",
    "url",
    "friendly",
    "manly"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsonmaur/namor.git"
  },
  "files": [
    "assets/",
    "lib/",
    "data.json",
    "namor.min.js",
    "README.md",
    "LICENSE"
  ],
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint src tests data/build.js",
    "pretest": "npm run build-data && npm run lint",
    "test": "rm -rf .nyc_output coverage && nyc ava tests -a -i babel-register",
    "posttest": "nyc report -r=lcov",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "build-data": "rm -f data.json && ./node_modules/.bin/babel-node data/build",
    "build-browser": "rm -f namor.min.js && UMD=true browserify -g uglifyify -t babelify -t envify src/umd -o namor.min.js",
    "build-node": "rm -rf lib && babel src -d lib --no-comments",
    "build": "npm run build-data && npm run build-browser && npm run build-node",
    "watch": "npm run build-node -- -w -s",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "ava": "0.13.0",
    "babel-cli": "6.6.5",
    "babel-eslint": "6.0.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.7.2",
    "babelify": "7.2.0",
    "browserify": "13.0.0",
    "coveralls": "2.11.9",
    "envify": "3.4.0",
    "eslint": "2.5.3",
    "eslint-config-zab": "0.1.3",
    "glob": "7.0.3",
    "nyc": "6.1.1",
    "source-map-support": "0.4.0",
    "uglifyify": "3.0.1"
  },
  "eslintConfig": {
    "extends": "zab"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "failFast": true
  },
  "nyc": {
    "include": [
      "src"
    ]
  }
}
